<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="~/css/styles.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body class="grid-container">    
    <header>
        <div class="container">
            <h1>Biking Log</h1>
            <nav>
                <ul>
                    <li><a asp-action="Index">Home</a></li>
                    <li><a asp-action="Trails">Trails</a></li>
                </ul>
            </nav>
        </div>
      
    </header>
    <div class="content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy;Copyright @DateTime.Now.Year  |  LINDA MULL </p>
    </footer>    
</body>
</html>